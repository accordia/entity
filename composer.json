{
    "name": "daikon/entity",
    "type": "library",
    "description": "Generic boilerplate for implementing structured entities in php.",
    "keywords": [ "value-object", "entity", "generic" ],
    "homepage": "https://github.com/daikon-cqrs/entity",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "daikon/data-structures": "master@dev",
        "ramsey/uuid": "~3.6",
        "jms/parser-lib": "~1.0",
        "beberlei/assert": "~2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "squizlabs/php_codesniffer": "^3.0",
        "satooshi/php-coveralls": "master@dev"
    },
    "autoload": {
        "psr-4": { "Daikon\\Entity\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Daikon\\Tests\\Entity\\": "tests" }
    },
    "scripts": {
        "build": [
            "@test",
            "@code-sniffer",
            "@validate-json"
        ],
        "test": "phpunit",
        "code-sniffer": "phpcs --extensions=php --standard=psr2 src tests",
        "code-sniffer-autofix": "phpcbf --standard=psr2 -d tabWidth=4 src",
        "validate-json": "composer validate --no-check-all --no-check-lock",
        "validate-deps": "composer validate --with-dependencies --strict"
    }
}
