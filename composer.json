{
    "name": "daikon/entity",
    "type": "library",
    "description": "Boilerplate for implementing well structured entities in PHP7.",
    "keywords": [ "value-object", "entity", "generic" ],
    "homepage": "https://github.com/daikon-cqrs/entity",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.2",
        "daikon/data-structure": "dev-upgrade/nativecalls",
        "daikon/interop": "master@dev",
        "ramsey/uuid": "^3.8",
        "jms/parser-lib": "^1.0",
        "beberlei/assert": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "squizlabs/php_codesniffer": "^3.3",
        "sebastian/phpcpd": "^4.1",
        "vimeo/psalm": "^2.0"
    },
    "autoload": {
        "psr-4": { "Daikon\\Entity\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Daikon\\Tests\\Entity\\": "tests" }
    },
    "scripts": {
        "build": [ "@sniff", "@tests" ],
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' src/ tests/",
        "code-sniffer-autofix": "phpcbf --standard=PSR2 -d tabWidth=4 src/ tests/",
        "copy-paste-detector": "phpcpd src/ tests/ || true",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json",
            "psalm"
        ],
        "test": "phpunit --no-coverage",
        "tests": "phpunit",
        "validate-json": "composer validate --no-check-all --no-check-lock",
        "validate-deps": "composer validate --with-dependencies --strict"
    }
}
